generator client {
  provider = "prisma-client"
  
}

datasource db {
  provider = "postgresql"
}

model User{
  id Int @id @default(autoincrement())
  name String
  email String @unique
  role Role @default(USER)
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}


model admin{
  id Int @id @default(autoincrement())
  name String @unique()
  password String @unique()
  role Role @default(ADMIN)
  email String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt()
}



// ----------------- roles enum

enum Role {
  USER
  ADMIN
}

